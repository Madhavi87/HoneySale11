<script type="text/javascript">
    function Delete(ID) {
        if (confirm("Are you sure, You want to Delete Record?")) {
            $.post("@Url.Action("DeleteDetail", "Purchase")?val=" + ID, function (res) {
                if (res.Success === "true") {

                    $('#tbl').dataTable().fnDraw();

                } else {
                    alert("Error getting data!");
                }
            });
        }
    }
</script>
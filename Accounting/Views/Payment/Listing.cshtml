@model IEnumerable<HoneySaleDAL.StaffPayment>
@{
    ViewBag.Title = "Staff Payment";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

 <style>
     tfoot
     {
         display: table-header-group;
     }
 </style>

<script type="text/javascript">
    $(document).ready(function () {



        $('#dataTables-example tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" />');
        });


        var table = $('#dataTables-example').DataTable({ "sPaginationType": "full_numbers" });

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });


    });


</script>


<section class="content-header">
    <h1 class="headingfont">Staff Payment Detail</h1>

</section>
<p class="indexbtnpadding">
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btnwidth" })
</p>
<section class="content">
     @if (ViewBag.SuccessMsg != null)
     {
     <script type="text/javascript">
         $(document).ready(function () {
             $.notify("@ViewBag.SuccessMsg ", "success");
         });
                                                </script>
     }
<div class="table-responsive tblbackground" style="padding:15px">
<table class="table table-responsive table-bordered tblfont" id="dataTables-example">
    <thead>
    <tr>
        
        <th>
            @Html.Label("Staff Name")
        </th>
        <th>
            @Html.Label("Balance Amount")
        </th>
          <th>
            @Html.Label("Return Amount")
        </th>
        <th>
            @Html.Label("Received On")
        </th>
         <th>
            @Html.Label("Received By")
        </th>
        <th>Action</th>
    </tr>
</thead>

    <tfoot>
        <tr>
        
        <th>
            @Html.Label("Staff Name")
        </th>
        <th>
            @Html.Label("Balance Amount")
        </th>
          <th>
            @Html.Label("Return Amount")
        </th>
        <th>
            @Html.Label("Received On")
        </th>
         <th>
            @Html.Label("Received By")
        </th>
        <th>Action</th>
    </tr>

    </tfoot>
  

    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
    <tr>
      
        <td class="tdtarget">
            @Html.DisplayFor(modelItem => item.tbluser.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Balance_Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Return_Amount)
        </td>
         <td>
            @HoneySale.Models.CommonFunction.GetShortDayFormat(item.Received_On)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Received_By)
        </td>
        <td>
       
            <a href="@Url.Action("Edit", new { id = item.ID })"><i class="fa fa-pencil"></i></a> |

            <a href="#" onclick="Delete(ID=@item.ID)"><i class="fa fa-times"></i></a>

        </td>
    </tr>
            }
        }
<//tbody>
</table>
</div>
    </section>


<script type="text/javascript">
    function Delete(ID) {
        if (confirm("Are you sure, You want to Delete Record?")) {
            window.location.href = "/Return/DeleteConfirmed/?id=" + ID;
        }
    }
</script>